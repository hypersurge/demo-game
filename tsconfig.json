{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"module": "commonjs",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"types": [ "rbx-types" ],

		// required, configurable
		"rootDir": "src",
		"outDir": "out",

		// optional
		"baseUrl": "src",
		"declaration": false,

		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Roact.createElement",

		"paths": {
			"@server/*": ["server/*"],
			"@client/*": ["client/*"],
			"@shared/*": ["shared/*"]
		}
	},
	"typeAcquisition": {
		"enable": true
	}
}